<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Medibox" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/azulprincipal</item>
        <item name="colorPrimaryVariant">@color/azulSecundario</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/azulprincipal</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/azulprincipal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/nexa_heavy</item>
        <item name="android:width">126sp</item>
    </style>

    <style name="botonCancelar" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/white</item>
        <item name="color">@color/azulprincipal</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/nexa_heavy</item>
        <item name="android:width">126sp</item>
    </style>

    <style name="ShadowTextViewStyle">
        <item name="android:background">@drawable/rounded_background</item> <!-- Aplicar el fondo redondeado -->
        <item name="android:padding">10dp</item> <!-- Ajustar el relleno según sea necesario -->
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">@color/white</item><!-- Establecer la elevación para la sombra -->
    </style>
</resources>