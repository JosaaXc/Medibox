<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/agregarPerfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".agregarPerfil">

    <ImageView
        android:id="@+id/logotop"
        android:layout_width="490sp"
        android:layout_height="275sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.337"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imgborde1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="143sp"
        android:layout_height="148sp"
        android:layout_marginStart="156sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logotop"
        app:srcCompat="@drawable/agregar_foto" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="143dp"
        android:layout_height="87dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/nexa_heavy"
        android:text="Agregar Perfil"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="381dp"
        android:layout_height="49dp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="56sp"
        app:cardBackgroundColor="@color/gris"
        app:cardCornerRadius="10sp"
        app:cardElevation="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="bottom"
            android:background="@color/azulprincipal" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            app:srcCompat="@drawable/icon_cara" />

        <EditText
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rellenar_info"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:paddingLeft="45sp"
            android:textColorHint="@color/grisdeletras" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>