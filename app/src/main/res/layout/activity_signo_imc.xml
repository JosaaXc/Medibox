<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16sp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/agregarPerfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".agregarPerfil">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="180dp"
            android:layout_height="178dp"
            android:layout_marginTop="220sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_imc" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="230sp"
            android:background="@drawable/imgborde1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- Texto de la imagen -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/nexa_heavy"
            android:gravity="start"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="2"
            android:shadowRadius="15"
            android:text="@string/imc"
            android:textColor="@color/white"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.135"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- Altura -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="68sp"
            android:layout_marginStart="30sp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="30sp"
            app:cardBackgroundColor="@color/gris"
            app:cardCornerRadius="10sp"
            app:cardElevation="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2">

            <View
                android:layout_width="match_parent"
                android:layout_height="3sp"
                android:layout_gravity="bottom"
                android:background="@color/azulprincipal" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:paddingLeft="15sp"
                app:srcCompat="@drawable/icon_cara" />

            <EditText
                android:id="@+id/altura"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@drawable/rellenar_info"
                android:ems="10"
                android:fontFamily="@font/inter"
                android:hint="Altura"
                android:inputType="numberDecimal"
                android:paddingLeft="50sp"
                android:textColorHint="@color/grisdeletras" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="3sp"
                android:layout_gravity="bottom"
                android:background="@color/azulprincipal" />
        </androidx.cardview.widget.CardView>
        <!-- Peso -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="68sp"
            android:layout_marginStart="30sp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30sp"
            app:cardBackgroundColor="@color/gris"
            app:cardCornerRadius="10sp"
            app:cardElevation="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <View
                android:layout_width="match_parent"
                android:layout_height="3sp"
                android:layout_gravity="bottom"
                android:background="@color/azulprincipal" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:paddingLeft="15sp"
                app:srcCompat="@drawable/icon_cara" />

            <EditText
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@drawable/rellenar_info"
                android:ems="10"
                android:fontFamily="@font/inter"
                android:hint="Peso"
                android:inputType="numberDecimal"
                android:paddingLeft="50sp"
                android:textColorHint="@color/grisdeletras" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="3sp"
                android:layout_gravity="bottom"
                android:background="@color/azulprincipal" />
        </androidx.cardview.widget.CardView>
        <!-- IMC -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="188dp"
            android:layout_height="65dp"
            android:layout_marginStart="30sp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30sp"
            app:cardBackgroundColor="@color/gris"
            app:cardCornerRadius="10sp"
            app:cardElevation="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2">

            <View
                android:layout_width="match_parent"
                android:layout_height="3sp"
                android:layout_gravity="bottom"
                android:background="@color/azulprincipal" />

            <EditText
                android:id="@+id/imc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@drawable/rellenar_info"
                android:ems="10"
                android:fontFamily="@font/inter"
                android:hint="Su IMC"
                android:inputType="textPersonName"
                android:paddingLeft="50sp"
                android:textColorHint="@color/grisdeletras" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="3sp"
                android:layout_gravity="bottom"
                android:background="@color/azulprincipal" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/button"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/boton_redondo"
            android:shadowRadius="3"
            android:text="Enviar"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnCancelar"
            app:layout_constraintTop_toBottomOf="@+id/cardView3" />

        <TextView
            android:id="@+id/btnCancelar"
            style="@style/botonCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/boton_radiocancelar"
            android:text="Cancelar"
            android:textAllCaps="false"
            android:textColor="@color/azulprincipal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView3"
            android:onClick="imcCancelar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>