<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Medibox" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azulprincipal</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/azulprincipal</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/azulprincipal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/nexa_heavy</item>
        <item name="android:width">126sp</item>
    </style>

    <style name="botonCancelar" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/white</item>
        <item name="color">@color/azulprincipal</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/nexa_heavy</item>
        <item name="android:width">126sp</item>
    </style>

</resources>